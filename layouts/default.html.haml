!!!
%html

  %head
    %meta(charset="utf-8")
    %title= "verticonaut - #{@item[:title]}"
    %link(rel="stylesheet" type="text/css" href="/assets/styles/stylesheet.css" media="screen")
    %link(rel="stylesheet" type="text/css" href="/assets/styles/jquery.jtweetsanywhere-1.2.1.css" media="screen")
    %meta(name="generator" content="nanoc 3.2.2")

  %style
    :plain
      #menubar .item {
        _border:          1px solid black;
        _background-color: blue;
        float:            left;
        height:           70px;
        margin:           0 1px;
        width:            134px;
        text-align:       center;
      }

      #menubar .first {
        margin-left: 8px;
      }

      .clear-float {
        clear: both;
      }

      #menu-item-color-1 {
        background: #BFBF99;
      }
      #menu-item-color-2 {
        background: #7A9982;
      }
      #menu-item-color-3 {
        background: #665C47;
      }
      #menu-item-color-4 {
        background: #7F0026;
      }
      #menu-item-color-5 {
        background: #E5B867;
      }

      #slide-panel {
        -moz-border-radius-bottomleft: 10px;
        -moz-border-radius-topleft: 10px;
        -webkit-border-bottom-left-radius: 10px;
        -webkit-border-top-left-radius: 10px;
        background: #EFEFEF;
        border: 1px solid #111111;
        display: none;
        filter: alpha(opacity=85);
        height: auto;
        right: 0;
        opacity: .65;
        padding: 60px 20px 20px 20px;
        position: absolute;
        top: 120px;
        width: 260px;
      }

      #slide-trigger {
        -moz-border-radius-bottomright: 0px;
        -moz-border-radius-bottomleft: 10px;
        -moz-border-radius-topleft: 10px;
        -webkit-border-bottom-right-radius: 0px;
        -webkit-border-bottom-left-radius: 10px;
        -webkit-border-top-left-radius: 10px;
        background:#333333;
        border:1px solid #444444;
        color:#fff;
        display: block;
        font-family: verdana, helvetica, arial, sans-serif;
        font-size: 12px;
        font-weight: 600;
        letter-spacing:-1px;
        padding: 10px 15px 10px 10px;
        position: absolute;
        right: 0;
        text-decoration: none;
        top: 130px;
      }

  %script(type="text/javascript" src="http://jqueryjs.googlecode.com/files/jquery-1.3.2.js")
  %script(type="text/javascript" src="assets/javascript/jtweetsanywhere.js")
  %script(type="text/javascript")
    :plain
      $(document).ready(function(){
        $("#slide-trigger").click(function(){
            $("#slide-panel").toggle("fast");

            return false;
        });

        $("#_slide-panel").mouseout(function() {
          $(this).toggle("fast");
        });

        $('#latest-tweets').jTweetsAnywhere({
          username: 'verticonaut',
          count: 5,
          showFollowButton: true
        });

      });
    


  %body
    #content(style="margin-left: auto; margin-right: auto; background-color: _green; width: 700px; height: 850px;")
      #title(style="float: right; width: 250px; padding-top: 15px; border-bottom: 2px solid silver; font-size: 24pt; text-align: right;")
        verticonaut
      .clear-float
      #socials(style="float: right; padding-top: 2px;")
        %div(style="float: right;")
          %a(href="http://www.facebook.com" target="_blank")
            %img(src="assets/img/facebook_32.png" style="zz-index: 5;")
        %div(style="float: right; z-index: 5;")
          %a(href="http://www.xing.com/profile/Martin_Schweizer10?sc_o=mxb_p" target="_blank")
            %img(src="assets/img/xing_32.png" style="zz-index: 5;")
        %div(style="float: right; z-index: 5;")
          %a(href="https://github.com/verticonaut" target="_blank")
            %img(src="assets/img/github_32.png" style="zz-index: 5;")
        %div(style="float: right; z-index: 5;")
          %a(href="http://twitter.com/#!/verticonaut" target="_blank")
            %img(src="assets/img/twitter_32.png" style="zz-index: 5;")
        
      #splash(style="position: absolute; top: 45px; bottom: 0; width: 800px; margin-left: auto; margin-right: auto; z-index: -1;")
        %img(src="assets/img/splash.png" style="position: absolute; left: 70px; right: 200px;")

      / #funbar(style="position: relative; top: 200px; background-color: red; width: 700px;  margin-left: 0; margin-right: auto;")
      /   _

    #menubar(style="margin-left: auto; margin-right: auto; _background-color: grey; width: 696px;")
      %a(href="/detail/climbing")
        #menu-item-color-1.item.first
          %p(style="margin-top: 25px;")
            Climbing
      %a(href="/detail/photography")
        #menu-item-color-2.item
          %p(style="margin-top: 25px;")
            Photography
      %a(href="/detail/projects")
        #menu-item-color-3.item
          %p(style="margin-top: 25px;")
            Projects
      %a(href="/detail/thoughts")
        #menu-item-color-4.item
          %p(style="margin-top: 25px;")
            Thoughts
      %a(href="/detail/about")
        #menu-item-color-5.item
          %p(style="margin-top: 25px;")
            About
      .clear(style="clear:both;")

    #footer(style="margin-left: auto; margin-right: auto; background-color: _green; width: 700px;")
      #footer-content(style ="padding: 10px 0 20px 0; text-align: center; font-size: 9pt;")
        Design and Copyright Â© 2011 Martin Schweizer - Built with
        %a(href="http://nanoc.stoneship.org/" target="_blank") Nanoc


    #slide-panel
      #latest-tweets(style="font-family: Helvetica, Arial, sans-serif; font-size: 10pt;")
    %a#slide-trigger(href="#")
