%html

  %head
    %meta(charset="utf-8")
    %title= "verticonaut - #{@item[:title]}"
    %link(rel="stylesheet" type="text/css" href="/assets/styles/default.css" media="screen")
    %link(rel="stylesheet" type="text/css" href="/assets/styles/jquery.jtweetsanywhere-1_2_1.css" media="screen")
    %meta(name="generator" content="nanoc 3.2.2")

    %script(type="text/javascript" src="http://jqueryjs.googlecode.com/files/jquery-1.3.2.js")
    %script(type="text/javascript" src="assets/javascript/jtweetsanywhere.js")
    %script(type="text/javascript" src="assets/javascript/jquery.vibrate.js")
    %script(type="text/javascript")
      :plain
        $(document).ready(function(){

          // twitter news slide panel
          $("#slide-trigger").click(function(){
              $("#slide-panel").toggle("fast");

              return false;
          });

          $("#_slide-panel").mouseout(function() {
            $(this).toggle("fast");
          });

          $('#latest-tweets').jTweetsAnywhere({
            username: 'verticonaut',
            count: 5,
            showFollowButton: true
          });

          // vibrate stuff
          $('#splash .focus').mouseenter(function() {
            // ele is area to shiver
            var id = $(this).attr("data-shiver-id");
            var ele = $(id);
            ele.attr('data-mouse', 'shiver');
            ele.show();
            
            // set menu item color
            var menu_ref = ele.attr('data-menu-item');
            $('.'+menu_ref).addClass(menu_ref + '-hover');

            // start shiver ele
            ele.vibrate({spread: 7, frequency: 1000, duration: 1000, speed: 50});
          });

          $('#menubar .focus').mouseenter(function() {
            var id = $(this).attr("data-shiver-id");
            var ele = $(id);
            ele.show();
            ele.vibrate({spread: 7, frequency: 1000, duration: 1000, speed: 50});
          });

          $('.shiver').mouseout(function() {
            var menu_ref = $(this).attr('data-menu-item');
            $('.'+menu_ref).removeClass(menu_ref + '-hover').addClass(menu_ref);

            if ($(this).attr('data-mouse')) {
              $(this).hide(); 
            }
          });

          $('#menubar .focus').mouseout(function() {
            var id = $(this).attr("data-shiver-id");
            $(id).hide();
          });
        });
      


